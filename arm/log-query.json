{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "workspaceName": {
        "type": "string",
        "metadata": {
          "description": "Name of the workspace."
        }
      }
    },
    "resources": [
      {
        "type": "Microsoft.OperationalInsights/workspaces/savedSearches",
        "name": "[concat(parameters('workspaceName'), '/HeartbeatSearch')]",
        "apiVersion": "2017-03-15-preview",
        "dependsOn": [
        ],
        "properties": {
            "query": "Heartbeat | summarize max(TimeGenerated) by Computer",
            "displayName": "Heartbeat by computer",
            "category": "ARM Samples"
        }
      }
    ]
}
